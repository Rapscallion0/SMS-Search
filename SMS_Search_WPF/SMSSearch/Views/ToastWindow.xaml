<Window x:Class="SMS_Search.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toast Notification"
        Width="300" Height="80"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        Opacity="0.95">
    <Border CornerRadius="5" BorderThickness="4" BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=BorderBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                <TextBlock x:Name="lblTitle" Text="Title" FontWeight="Bold" FontSize="14" Foreground="White" TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="lblMessage" Text="Message" FontSize="12" Foreground="White" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
